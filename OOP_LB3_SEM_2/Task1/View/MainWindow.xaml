<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="Секундомер" Height="400" Width="450" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="25" Margin="25">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderThickness="1" BorderBrush="Black">
                <TextBlock x:Name="TimeBlock" FontSize="40"/>
                </Border>
            <Grid Margin="0 15 0 0" Cursor="Hand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="Start" Content="Start" FontSize="15"/>
                <Button Grid.Column="1" x:Name="Pause" Content="Pause" FontSize="15"/>
                <Button Grid.Column="2" x:Name="Stop" Content="Stop" FontSize="15"/>
                </Grid>
            </StackPanel>
        </Border>
</Window>
